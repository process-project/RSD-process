upstream flask {
     server unix:///tmp/api.sock;
}

server {
    listen 443;
    listen [::]:443;
    ssl on;
    ssl_certificate /cert/live/{DOMAIN}/fullchain.pem;
    ssl_certificate_key /cert/live/{DOMAIN}/privkey.pem;
    server_name {DOMAIN};

    location / {
                include uwsgi_params;
                uwsgi_pass flask;
        }
}

server {
        listen 0.0.0.0:8000;
        server_name _;
        return 301 https://$host$request_uri;
}